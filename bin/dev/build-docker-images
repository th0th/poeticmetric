#!/usr/bin/env bash
set -eo pipefail

. $(dirname "$(readlink -f "$0")")/base
BASE_DIR=$(get-base-dir)

docker build \
  --file "${BASE_DIR}/backend/development.Dockerfile" \
  --tag code.unius.sh/poeticmetric/backend:development \
  "${BASE_DIR}/backend" &

docker build \
  --build-arg IS_HOSTED=true \
  --build-arg TAGS_ENVIRONMENT=development \
  --file "${BASE_DIR}/frontend/development.Dockerfile" \
  --tag code.unius.sh/poeticmetric/frontend:development \
  "${BASE_DIR}/frontend" &

wait
