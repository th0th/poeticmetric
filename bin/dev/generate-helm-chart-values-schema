#!/usr/bin/env bash
set -eo pipefail

. $(dirname "$(readlink -f "$0")")/base
BASE_DIR=$(get-base-dir)

exec helm schema \
  -input "${BASE_DIR}/chart/values.yaml" \
  -noAdditionalProperties true \
  -output "${BASE_DIR}/chart/values.schema.json" \
  -schemaRoot.description "Schema for PoeticMetric helm chart values" \
  -schemaRoot.title "PoeticMetric Helm Values Schema"
