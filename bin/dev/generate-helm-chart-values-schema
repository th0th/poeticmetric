#!/usr/bin/env bash
set -eo pipefail

. "$(dirname "$(readlink -f "$0")")/base"
BASE_DIR=$(get-base-dir)

exec helm schema \
  --k8s-schema-version "v1.33.3" \
  --no-additional-properties \
  --output "${BASE_DIR}/chart/values.schema.json" \
  --schema-root.description "Schema for PoeticMetric helm chart values" \
  --schema-root.title "PoeticMetric Helm Values Schema" \
  --values "${BASE_DIR}/chart/values.yaml"
