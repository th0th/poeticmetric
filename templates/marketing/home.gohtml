<section class="py-5">
  <div class="container text-center">
    <h2>Get accurate insights and take control of your data</h2>

    <a class="btn btn-lg btn-primary mt-3" href="{{ .C.GetRouteURL "auth.signUp" nil }}">Get started</a>

    <div class="mt-2">
      <a
        class="fw-bold text-decoration-none text-decoration-underline-hover text-primary"
        href="{{ .C.GetRouteURL "marketing.pricing" nil }}"
      >
        See plans and pricing
      </a>
    </div>
  </div>
</section>
